cmake_minimum_required(VERSION 2.8.2)
project(external-download NONE)
include(ExternalProject)

# Pistache:
set(PISTACHE_ROOT ${CMAKE_BINARY_DIR}/external/pistache)
ExternalProject_Add(pistache
	PREFIX ${PISTACHE_ROOT}
	GIT_REPOSITORY "https://github.com/oktal/pistache.git"
  INSTALL_COMMAND   ""
  TEST_COMMAND      ""
)

# Spdlog:
set(SPDLOG_ROOT ${CMAKE_BINARY_DIR}/external/spdlog)
ExternalProject_Add(spdlog
	PREFIX ${SPDLOG_ROOT}
	GIT_REPOSITORY "https://github.com/gabime/spdlog.git"
	GIT_TAG v1.6.1
	CMAKE_ARGS "-DSPDLOG_BUILD_SHARED:BOOL=ON"
  INSTALL_COMMAND   ""
  TEST_COMMAND      ""
)

# Google Test:
set(GOOGLETEST_ROOT ${CMAKE_BINARY_DIR}/external/googletest)
ExternalProject_Add(googletest
	PREFIX ${GOOGLETEST_ROOT}
  GIT_REPOSITORY    "https://github.com/google/googletest.git"
  GIT_TAG           master
  INSTALL_COMMAND   ""
  TEST_COMMAND      ""
)
